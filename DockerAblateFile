ARG PETSC_BASE_IMAGE=petsc-build:latest
FROM $PETSC_BASE_IMAGE

# Install dependencies
RUN apt-get update && apt-get install -y clang-format

# Define location of ABLATE
ENV ABLATE_URL https://github.com/UBCHREST/ablate.git

# Clone ABLATE
WORKDIR /
RUN git clone ${ABLATE_URL} /ablate

# Store the org paths
ENV PKG_CONFIG_PATH_ORG=${PKG_CONFIG_PATH}
ENV PATH_ORG=${PATH}

# Test 32-bit opt
WORKDIR /

# Set the env, note that each one must use a sequential command to see previous env
ENV PETSC_ARCH=arch-ablate-opt 
ENV PKG_CONFIG_PATH="${PETSC_DIR}/${PETSC_ARCH}/lib/pkgconfig:$PKG_CONFIG_PATH_ORG" 
ENV PATH="${PETSC_DIR}/${PETSC_ARCH}/bin:$PATH_ORG"

RUN mkdir ${PETSC_ARCH} && \
 	cmake -DCMAKE_BUILD_TYPE=Release -S ablate -B ${PETSC_ARCH} && \
 	make -C ${PETSC_ARCH} -j $(nproc)

# Run tests
WORKDIR ${PETSC_ARCH}
RUN bash -c "make format-check && ctest"
 
# Test 64-bit opt
WORKDIR /
ENV PETSC_ARCH=arch-ablate-opt-64
ENV PKG_CONFIG_PATH="${PETSC_DIR}/${PETSC_ARCH}/lib/pkgconfig:$PKG_CONFIG_PATH_ORG"
ENV PATH="${PETSC_DIR}/${PETSC_ARCH}/bin:$PATH_ORG"
 
RUN mkdir ${PETSC_ARCH} && \
 	cmake -DCMAKE_BUILD_TYPE=Release -S ablate -B ${PETSC_ARCH} && \
 	make -C ${PETSC_ARCH} -j $(nproc)
 
# Run tests
WORKDIR ${PETSC_ARCH}
RUN bash -c "make format-check && ctest"
